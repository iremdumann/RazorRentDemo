@page
@model RazorRentDemo.Pages.Garage.CreateModel

@{
    ViewData["Title"] = "Add Car";
    <script src="https://cdn.tiny.cloud/1/f0mnuv7dss7y3zfwou1drnrfyzdghfzold3yh1iwwnpuqnur/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

}

<h4 class="display-8">Add Car</h4>

<form method="post">
    <div class="row">
        <div class="col-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="Car.Brand" class="control-label"></label>
                <input asp-for="Car.Brand" class="form-control" />
                <span asp-validation-for="Car.Brand" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Car.UnitPrice" class="control-label"></label>
                <input asp-for="Car.UnitPrice" class="form-control" />
                <span asp-validation-for="Car.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <select asp-for="CStateEnum" asp-items="Html.GetEnumSelectList<CarState>()" class="form-control">
                    <option value="">-- Select One from enum --- </option>
                </select>
            </div>
            <div class="form-group my-2">
                <select asp-for="CStateListSelection" asp-items="@Model.CarStateList" class="form-control">
                    <option value="">-- Select One from list --- </option>
                </select>
            </div>
            <div class="form-group form-check my-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="@Model.Car.Avaliable" /> Avaliable
                </label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label asp-for="@Model.TestText">Notes</label>
                <textarea class="form-control" asp-for="@Model.TestText" rows="5"></textarea>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Add" class="btn btn-primary w-50" />
            </div>
            <div>
                <a asp-page="Index" class="btn btn-outline-primary w-50">Back to List</a>
            </div>
        </div>
    </div>
</form>
<script>
    tinymce.init({
        selector: 'textarea',
        plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
        toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

