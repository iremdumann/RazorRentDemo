@page
@model RazorRentDemo.Pages.Garage.CreateModel

@{
    ViewData["Title"] = "Add Car";
}
<h4>Add Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="Car.Brand" class="control-label"></label>
                <input asp-for="Car.Brand" class="form-control" />
                <span asp-validation-for="Car.Brand" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Car.UnitPrice" class="control-label"></label>
                <input asp-for="Car.UnitPrice" class="form-control" />
                <span asp-validation-for="Car.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group form-check my-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Car.Avaliable" /> Avaliable
                </label>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Add" class="btn btn-primary w-50" />
            </div>
        </form>
        <div>
            <a asp-page="Index" class="btn btn-outline-primary w-50">Back to List</a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

